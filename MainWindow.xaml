<Window x:Class="NumberGame.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NumberGame"
        mc:Ignorable="d"
        Title="NumberGame" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Name="Header" Height="70"/>
            <RowDefinition Name="Body"/>
            <RowDefinition Name="Footer" Height="25" />
        </Grid.RowDefinitions>
        <!--- Header and Title -->
        <Rectangle Grid.Row="0" Fill="Orchid"/>
        <!-- Body -->
        <Rectangle Grid.Row="1" Fill="Aqua"/>
        <!-- Footer -->
        <Rectangle Grid.Row="2" Fill="Gray"/>
        <TextBlock Text="Play With Numbers" FontSize="45" HorizontalAlignment="Center" VerticalAlignment="Top"></TextBlock>
    </Grid>
</Window>
